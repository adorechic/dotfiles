[core]
  editor = /usr/bin/vim
  excludesfile = ~/.gitignore
[include]
  path = ~/.gitconfig.local
[color]
  ui = auto
[alias]
  co = checkout
  st = status -sb
  b = branch
  d = diff
  ds = diff --cached
  g = grep --line-number --show-function --color --heading --break
  l = log --oneline --decorate --color
  lg = log --oneline --decorate --color --graph
  lp = log --decorate --stat --patch
  fixup = commit --amend -C HEAD
  gsub = git-gsub
[pager]
  log = /usr/local/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
  show = /usr/local/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
  diff = /usr/local/opt/git/share/git-core/contrib/diff-highlight/diff-highlight | less
